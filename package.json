{
  "name": "minhominah",
  "version": "1.0.0",
  "description": "민호와 민아의 성장 앨범 - 소중한 추억을 담는 디지털 공간",
  "main": "index.html",
  "scripts": {
    "dev": "live-server",
    "build": "npm run build-css",
    "build-css": "npx tailwindcss -i ./src/input.css -o ./css/tailwind.css --minify",
    "watch-css": "npx tailwindcss -i ./src/input.css -o ./css/tailwind.css --watch",
    "preview": "vercel dev",
    "deploy": "git add . && git commit -m 'Update' && git push origin main",
    "deploy:windows": "powershell.exe -File deploy-to-vercel.ps1",
    "deploy:unix": "bash deploy-to-vercel.sh"
  },
  "keywords": [
    "photo-album",
    "family",
    "memories",
    "supabase"
  ],
  "author": "thaiholic",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  }
}
